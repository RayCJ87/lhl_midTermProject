  <header>
    <% include partials/_header %>
  </header>


<body class="bodyLayout">

  <div class="title">
    <h1 class="welcome">Welcome to Schoodle!</h1>
    <p class="sub-title">Where creating event is quick and easy...</p>
    <button id="start" class="btn btn-primary btn-lg">Get started!</button>
  </div>

  <div class="content1">
  <main class="container">

  <div class="wrapper">

  <article>
    <div class="jumbotron" class="fitContent">
      <h4 class="sub-title">Create an event!</h4>
      <h4 class="sub-title">Step 1</h4>
      <form action="/api/events/create" method="POST">
        <div class="eventInput">
        <table>
          <tr>
            <td> <label type="text" >Event title:</label> </td>
            <td class="clmnWidth"> <input type="text" name="theEventName" style="width: 100%;"> </td>
          </tr>

          <tr>
            <td> <label type="text">Location  :</label> </td>
            <td> <input type="text" name="theEventLocation" style="width: 100%;"> </td>
          </tr>

          <tr>
            <td> <label type="text">Organizer:</label> </td>
            <td> <input type="text" name="theHostName" style="width: 100%;"> </td>
          </tr>

          <tr>
            <td> <label type="text">Email:</label> </td>
            <td> <input type="email" name="theHostEmail" placeholder="email@example.com" style="width: 100%;"> </td>
          </tr>

          <tr>
            <td> <label type="text" class="eventDescr">Event Description:</label> </td>
            <td> <textarea class="textArea" name="theEventDescription" placeholder="Tell us about the event" style="width: 100%;"> </textarea></td>
          </tr>
        </table>

          <button class="btn btn-primary btn-sm" id="setEvent" type="button" name="addEvent" onClick="composeEvent()">Continue</button>
        </div>

        <div class="eventSetup">
          <h4>Select time slots</h4>
          <input type="datetime-local" id="getDate" name="eventTime">
          <button  class="btn btn-secondary btn-sm" id="setDate" type="button" name="addTime" onClick="loadTimeSlots()"> <i class="fas fa-check-circle"></i> Add</button>
          <p class="timeZone"></p>
          <button class="btn btn-success" id="createEvent" type="submit">Create Event</button>
        </div>
      </form>
    </div>
  </article>

  </div>
  </main>
  </div>

</body>

